<?xml version="1.0"?>
<odoo>
    <data>
        <record id="txt_local.crm_sms_smart_button" model="ir.ui.view">
            <field name="name">Txt Local CRM Smart Button</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_messages" icon="fa-inbox">
                        <field string="SMS" name="number_of_sms" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>